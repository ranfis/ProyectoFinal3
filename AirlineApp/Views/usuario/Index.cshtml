@model IEnumerable<AirlineApp.Models.usuario>
@{
    ViewBag.Title = "Index";
}
<h2>
    Administrar Usuario</h2>
<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table>
    <tr>
        <th>
            Usuario
        </th>
        <th>
            Nombre
        </th>
        <th>
            Apellido
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nusuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apellido)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.nusuario }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.nusuario }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.nusuario })
            </td>
        </tr>
    }
</table>
